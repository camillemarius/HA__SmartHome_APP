<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_deckenlampe"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bg_lamp_menu_white"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:layout_margin="10dp"
    app:layout_constraintDimensionRatio="H,1:1">


        <ImageView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:rotation="60"
            android:src="@drawable/rose"
            app:layout_constraintBottom_toBottomOf="@+id/textView_scene_device_cnt"
            app:layout_constraintStart_toStartOf="@+id/textView_scene_title"
            app:layout_constraintTop_toTopOf="@+id/textView_scene_title" />
        <TextView
            android:id="@+id/textView_scene_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Romantik"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_scene_device_cnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4 GerÃ¤te"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView_scene_title"
            tools:layout_editor_absoluteX="-53dp" />

</androidx.constraintlayout.widget.ConstraintLayout>